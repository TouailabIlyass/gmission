<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/center_background"
    tools:context=".AddMissionActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".4"
        >
    <ImageView
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:src="@drawable/mission_bk"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ajouter Mission"
        android:textColor="#DDD"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="50dp"
        />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="50dp"
        android:padding="20dp"
        android:background="@drawable/back_withe_raduis"
        >
    <EditText
        android:id="@+id/txt_typemission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type de mission"
        android:textColorHint="#0D93C2"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        />

    <TextView
        android:id="@+id/lbl_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_typemission"
        android:visibility="visible"
        android:padding="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="12/34/22"
        />
    <Button
        android:id="@+id/btn_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:textColor="@color/white"
        android:layout_below="@id/txt_typemission"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/back_red_raduis"
        />
    <Button
        android:id="@+id/btn_saveMission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Valider"
        android:textColor="@color/white"
        android:layout_below="@id/btn_date"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/back_blue_raduis"
        />
    </RelativeLayout>
</LinearLayout>